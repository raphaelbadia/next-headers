{
  "name": "next-headers",
  "description": "A Next.js plugin to access headers() and cookies() in the middleware",
  "version": "0.0.4",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external next",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts --external next",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test": "jest --silent=false"
  },
  "devDependencies": {
    "@nextheaders/tsconfig": "*",
    "@types/jest": "^29.5.2",
    "eslint": "^7.32.0",
    "eslint-config-nextheaders": "*",
    "jest": "^29.5.0",
    "next": "^13.4.4",
    "ts-jest": "^29.1.1",
    "tsup": "^5.10.1",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "next": "^13.4.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
